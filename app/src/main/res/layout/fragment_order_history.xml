<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.OrderHistoryFragment">

    <TextView
        android:id="@+id/txtPreviousOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your previous are listed below :"
        android:textColor="#a9a9a9"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp"
        />
    <View
        android:id="@+id/viewOrderFragment"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/txtPreviousOrder"
        android:background="#a9a9a9"
        android:layout_marginTop="5dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOrderHistoryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewOrderFragment"
        android:layout_marginTop="19dp"
        android:padding="9dp"
        />
</RelativeLayout>